---
import Layout from '../../layouts/Layout.astro';

const modules = [
  {
    title: "Claude Code Integration",
    description: "Setting up and using Claude Code for development workflows",
    slug: "claude-code",
    order: 1,
    tags: ["claude-code", "cli", "setup", "workflow"]
  },
  {
    title: "Other Coding Agents", 
    description: "GitHub Copilot, Cursor AI, Codeium and comparative analysis",
    slug: "other-agents",
    order: 2,
    tags: ["copilot", "cursor", "codeium", "comparison", "ai-tools"]
  },
  {
    title: "Agent Workflow Optimization",
    description: "Task breakdown strategies, quality control, and human-AI collaboration patterns", 
    slug: "workflow-optimization",
    order: 3,
    tags: ["workflow", "optimization", "collaboration", "productivity"]
  }
];
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          AI Coding Agents
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Master the art of working with AI coding agents. Learn to set up, configure, and optimize 
          your workflow with Claude Code, GitHub Copilot, Cursor AI, and other powerful AI development tools.
        </p>
      </div>

      <!-- Learning Path -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Learning Path</h2>
        <div class="space-y-6">
          {modules.map((module) => (
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center mb-2">
                      <span class="inline-flex items-center justify-center w-8 h-8 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium mr-3">
                        {module.order}
                      </span>
                      <h3 class="text-xl font-semibold text-gray-900">
                        <a href={`/coding-agents/${module.slug}`} class="hover:text-indigo-600 transition-colors">
                          {module.title}
                        </a>
                      </h3>
                    </div>
                    <p class="text-gray-600 mb-4">{module.description}</p>
                    <div class="flex flex-wrap gap-2">
                      {module.tags.map(tag => (
                        <span class="inline-block px-3 py-1 text-xs font-medium bg-indigo-100 text-indigo-800 rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                  <div class="ml-4">
                    <a 
                      href={`/coding-agents/${module.slug}`}
                      class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors"
                    >
                      Learn
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Tool Comparison -->
      <div class="bg-white rounded-lg shadow-md p-8 mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Popular AI Coding Agents</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center p-4 border border-gray-200 rounded-lg">
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-orange-600 font-bold text-xl">C</span>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Claude Code</h3>
            <p class="text-sm text-gray-600">CLI-based AI assistant for code analysis and generation</p>
          </div>
          
          <div class="text-center p-4 border border-gray-200 rounded-lg">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-blue-600 font-bold text-xl">⎘</span>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">GitHub Copilot</h3>
            <p class="text-sm text-gray-600">Real-time code completion and suggestions</p>
          </div>
          
          <div class="text-center p-4 border border-gray-200 rounded-lg">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-purple-600 font-bold text-xl">⎟</span>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Cursor AI</h3>
            <p class="text-sm text-gray-600">AI-first code editor with native intelligence</p>
          </div>
          
          <div class="text-center p-4 border border-gray-200 rounded-lg">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-green-600 font-bold text-xl">∞</span>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Codeium</h3>
            <p class="text-sm text-gray-600">Free AI coding assistant with privacy focus</p>
          </div>
        </div>
      </div>

      <!-- Workflow Mastery -->
      <div class="bg-white rounded-lg shadow-md p-8 mb-12">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">AI-Human Collaboration Patterns</h2>
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-4">
              <svg class="w-5 h-5 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Strategic Planning (Human-Led)</h3>
              <p class="text-gray-600">
                Architecture decisions, security considerations, and high-level design remain human responsibilities. 
                AI provides analysis and suggestions but humans make final decisions.
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-4">
              <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Implementation (Collaborative)</h3>
              <p class="text-gray-600">
                Feature development, API design, and component creation benefit from human-AI collaboration. 
                AI generates code while humans provide context and review.
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
              <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Routine Tasks (AI-Led)</h3>
              <p class="text-gray-600">
                Boilerplate code, documentation generation, and test creation can be largely automated. 
                AI handles the heavy lifting while humans provide oversight.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Key Skills -->
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Tool Mastery</h3>
          <p class="text-gray-600">
            Learn to set up, configure, and effectively use multiple AI coding agents, 
            understanding their strengths and optimal use cases.
          </p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Quality Control</h3>
          <p class="text-gray-600">
            Develop systematic approaches to review, validate, and improve AI-generated code 
            while maintaining security and performance standards.
          </p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Productivity Optimization</h3>
          <p class="text-gray-600">
            Measure and optimize your AI-assisted development workflow, 
            tracking improvements in speed, quality, and team satisfaction.
          </p>
        </div>
      </div>

      <!-- Prerequisites -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-12">
        <h2 class="text-lg font-semibold text-blue-800 mb-2">Prerequisites</h2>
        <p class="text-blue-700 mb-4">
          To maximize your learning in this advanced module, ensure you've completed:
        </p>
        <ul class="space-y-2 text-blue-700">
          <li class="flex items-center">
            <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <a href="/fundamentals" class="hover:underline">Software Engineering Fundamentals</a>
          </li>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <a href="/ai-development" class="hover:underline">AI-Assisted Development</a>
          </li>
        </ul>
      </div>

      <!-- Call to Action -->
      <div class="text-center">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Ready to Master AI Coding Agents?</h2>
        <p class="text-gray-600 mb-6">
          Start with Claude Code integration and work your way through the complete toolkit of modern AI development tools.
        </p>
        <div class="space-x-4">
          <a 
            href="/coding-agents/claude-code" 
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors"
          >
            Start with Claude Code
          </a>
          <a 
            href="/resources" 
            class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors"
          >
            Browse Tools & Resources
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>