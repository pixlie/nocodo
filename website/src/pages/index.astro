---
import Layout from '../layouts/Layout.astro';
import Button from '../components/UI/Button.astro';
import Card from '../components/UI/Card.astro';

const learningPaths = [
  {
    title: "Software Engineering Fundamentals",
    description: "Master the core concepts before diving into AI-assisted development",
    topics: ["Git & Version Control", "CI/CD Pipelines", "Testing", "Code Quality"],
    href: "/fundamentals",
    icon: "âš¡",
    color: "blue",
    order: 1
  },
  {
    title: "AI-Assisted Development", 
    description: "Learn to leverage AI tools effectively in your development workflow",
    topics: ["AI Agents Overview", "Documentation Workflows", "Project Management"],
    href: "/ai-development",
    icon: "ðŸ¤–",
    color: "purple", 
    order: 2
  },
  {
    title: "AI Coding Agents",
    description: "Master Claude Code and other AI coding agents for maximum productivity",
    topics: ["Claude Code", "GitHub Copilot", "Workflow Optimization"],
    href: "/coding-agents", 
    icon: "ðŸš€",
    color: "indigo",
    order: 3
  }
];
---

<Layout 
  title="Vibe Coding - Learn Software Engineering Fundamentals Before AI" 
  description="Master software engineering fundamentals before leveraging AI coding agents. Learn Git, CI/CD, testing, and AI-assisted development through structured modules."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="absolute inset-0 h-full w-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="32" height="32" patternUnits="userSpaceOnUse">
            <path d="M0 32V0h32" fill="none" stroke="currentColor" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"/>
      </svg>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="text-center">
        <!-- Main Branding -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-gray-900 mb-6">
          <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">
            Vibe Coding
          </span>
        </h1>
        
        <!-- Tagline -->
        <p class="text-xl sm:text-2xl text-gray-600 max-w-4xl mx-auto mb-8 leading-relaxed">
          A structured approach to software engineering that emphasizes understanding 
          <strong class="text-gray-900">fundamentals</strong> before leveraging 
          <strong class="text-gray-900">AI coding agents</strong>
        </p>
        
        <!-- Call to Action -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
          <Button 
            href="/fundamentals"
            variant="primary"
            size="lg"
          >
            Start Learning
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
          <Button 
            href="/about"
            variant="outline"
            size="lg"
          >
            Learn More About Vibe Coding
          </Button>
        </div>
        
        <!-- Quick Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-3xl mx-auto">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-2">3</div>
            <div class="text-gray-600">Learning Modules</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600 mb-2">10+</div>
            <div class="text-gray-600">Comprehensive Topics</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600 mb-2">âˆž</div>
            <div class="text-gray-600">AI-Enhanced Productivity</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Learning Paths Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Your Learning Journey
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Follow our structured path from software engineering fundamentals to AI-powered development mastery
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8">
        {learningPaths.map((path) => (
          <Card 
            title={path.title}
            description={path.description}
            href={path.href}
            hover={true}
            class={`border-t-4 border-${path.color}-500`}
          >
            <!-- Order Badge -->
            <div class={`absolute -top-4 left-8 w-8 h-8 bg-${path.color}-500 text-white rounded-full flex items-center justify-center text-sm font-bold`}>
              {path.order}
            </div>
            
            <!-- Icon -->
            <div class="text-4xl mb-4">{path.icon}</div>
            
            <!-- Topics Preview -->
            <div class="mb-6">
              <h4 class="text-sm font-semibold text-gray-900 mb-3">Key Topics:</h4>
              <div class="flex flex-wrap gap-2">
                {path.topics.map(topic => (
                  <span class={`px-3 py-1 text-xs font-medium bg-${path.color}-100 text-${path.color}-800 rounded-full`}>
                    {topic}
                  </span>
                ))}
              </div>
            </div>
            
            <div slot="footer">
              <Button 
                href={path.href}
                variant="primary"
                class="w-full"
              >
                Start Module
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </Button>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Philosophy Preview -->
  <section class="py-24 bg-gradient-to-r from-gray-50 to-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            The Vibe Coding Philosophy
          </h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            In the age of AI-assisted development, success isn't about replacing human skillsâ€”it's about 
            <strong class="text-gray-900">amplifying them</strong>. Vibe Coding teaches you to find the perfect 
            rhythm between human expertise and artificial intelligence.
          </p>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-1">
                <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-600"><strong class="text-gray-900">Fundamentals First:</strong> Build a solid foundation before leveraging AI tools</p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-1">
                <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-600"><strong class="text-gray-900">AI as Amplifier:</strong> Use AI to enhance, not replace, your development skills</p>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3 mt-1">
                <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-600"><strong class="text-gray-900">Quality Over Speed:</strong> Maintain high standards while increasing productivity</p>
            </div>
          </div>
          <div class="mt-8">
            <Button 
              href="/about"
              variant="ghost"
              class="text-blue-600 bg-blue-100 hover:bg-blue-200"
            >
              Learn More About Our Philosophy
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </Button>
          </div>
        </div>
        
        <!-- Visual Element -->
        <div class="relative">
          <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <div class="flex-1 h-8 bg-gray-100 rounded"></div>
              </div>
              <div class="space-y-3">
                <div class="h-4 bg-blue-100 rounded w-3/4"></div>
                <div class="h-4 bg-purple-100 rounded w-1/2"></div>
                <div class="h-4 bg-indigo-100 rounded w-5/6"></div>
                <div class="flex items-center space-x-2 mt-4">
                  <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-gray-600">AI-Enhanced Development</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Getting Started Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Ready to Start Your Journey?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Join thousands of developers transforming their workflow with AI while maintaining the highest standards of software craftsmanship
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Learn</h3>
          <p class="text-gray-600">Master fundamentals and AI tools through structured modules</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Practice</h3>
          <p class="text-gray-600">Apply concepts with hands-on projects and real-world scenarios</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Optimize</h3>
          <p class="text-gray-600">Fine-tune your AI-assisted development workflow</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Share</h3>
          <p class="text-gray-600">Contribute to the vibe coding community</p>
        </div>
      </div>
      
      <!-- Final CTA -->
      <div class="text-center">
        <div class="inline-flex flex-col sm:flex-row gap-4">
          <Button 
            href="/fundamentals"
            variant="primary"
            size="lg"
          >
            Begin Your Journey
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </Button>
          <Button 
            href="/resources"
            variant="secondary"
            size="lg"
          >
            Browse Resources
          </Button>
        </div>
        <p class="mt-4 text-sm text-gray-500">
          Free to learn â€¢ No signup required â€¢ Community-driven
        </p>
      </div>
    </div>
  </section>
</Layout>