---
import Layout from '../layouts/Layout.astro';

const tools = [
  {
    category: "AI Coding Agents",
    items: [
      {
        name: "Claude Code",
        description: "Anthropic's official CLI for AI-assisted development",
        url: "https://docs.anthropic.com/claude-code",
        type: "CLI Tool"
      },
      {
        name: "GitHub Copilot",
        description: "AI pair programmer for real-time code suggestions",
        url: "https://github.com/features/copilot",
        type: "IDE Extension"
      },
      {
        name: "Cursor AI",
        description: "AI-first code editor with native intelligence",
        url: "https://cursor.ai",
        type: "Code Editor"
      },
      {
        name: "Codeium",
        description: "Free AI coding assistant with privacy focus",
        url: "https://codeium.com",
        type: "IDE Extension"
      }
    ]
  },
  {
    category: "Development Tools",
    items: [
      {
        name: "Git",
        description: "Distributed version control system",
        url: "https://git-scm.com",
        type: "Version Control"
      },
      {
        name: "GitHub Actions",
        description: "CI/CD platform for automated workflows",
        url: "https://github.com/features/actions",
        type: "CI/CD"
      },
      {
        name: "Jest",
        description: "JavaScript testing framework",
        url: "https://jestjs.io",
        type: "Testing"
      },
      {
        name: "ESLint",
        description: "Pluggable JavaScript linter",
        url: "https://eslint.org",
        type: "Code Quality"
      }
    ]
  },
  {
    category: "Documentation & Planning",
    items: [
      {
        name: "Notion",
        description: "All-in-one workspace for notes and collaboration",
        url: "https://notion.so",
        type: "Documentation"
      },
      {
        name: "Figma",
        description: "Collaborative design and prototyping tool",
        url: "https://figma.com",
        type: "Design"
      },
      {
        name: "Linear",
        description: "Modern project management for software teams",
        url: "https://linear.app",
        type: "Project Management"
      },
      {
        name: "Markdown",
        description: "Lightweight markup language for documentation",
        url: "https://markdownguide.org",
        type: "Documentation"
      }
    ]
  }
];

const templates = [
  {
    name: "React TypeScript Starter",
    description: "Production-ready React app with TypeScript, Tailwind, and testing setup",
    repo: "facebook/create-react-app",
    language: "TypeScript"
  },
  {
    name: "Node.js API Template",
    description: "Express.js API with authentication, validation, and testing",
    repo: "microsoft/nodejs-guidelines",
    language: "JavaScript"
  },
  {
    name: "GitHub Actions Workflows",
    description: "Common CI/CD workflow templates for different tech stacks",
    repo: "actions/starter-workflows",
    language: "YAML"
  },
  {
    name: "ESLint + Prettier Config",
    description: "Shareable configuration for code quality and formatting",
    repo: "airbnb/javascript",
    language: "JavaScript"
  }
];

const learning = [
  {
    name: "freeCodeCamp",
    description: "Free coding curriculum with hands-on projects",
    url: "https://freecodecamp.org"
  },
  {
    name: "MDN Web Docs",
    description: "Comprehensive web development documentation",
    url: "https://developer.mozilla.org"
  },
  {
    name: "Codecademy",
    description: "Interactive coding courses and projects",
    url: "https://codecademy.com"
  },
  {
    name: "The Odin Project",
    description: "Free full-stack web development curriculum",
    url: "https://theodinproject.com"
  }
];
---

<Layout>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Resources & Tools
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Curated collection of tools, templates, and learning resources to accelerate your development workflow. 
          Everything you need to implement vibe coding principles effectively.
        </p>
      </div>

      <!-- Tools Section -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Essential Tools</h2>
        <div class="space-y-12">
          {tools.map(category => (
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-6">{category.category}</h3>
              <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6">
                {category.items.map(tool => (
                  <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6">
                    <div class="flex justify-between items-start mb-3">
                      <h4 class="text-lg font-semibold text-gray-900">{tool.name}</h4>
                      <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded">
                        {tool.type}
                      </span>
                    </div>
                    <p class="text-gray-600 mb-4">{tool.description}</p>
                    <a 
                      href={tool.url} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
                    >
                      Visit Website
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </a>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Templates Section -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Project Templates</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {templates.map(template => (
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6">
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-lg font-semibold text-gray-900">{template.name}</h3>
                <span class="inline-block px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
                  {template.language}
                </span>
              </div>
              <p class="text-gray-600 mb-4">{template.description}</p>
              <a 
                href={`https://github.com/${template.repo}`} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
              >
                View on GitHub
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </section>

      <!-- Learning Resources -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Learning Resources</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {learning.map(resource => (
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">{resource.name}</h3>
              <p class="text-gray-600 mb-4">{resource.description}</p>
              <a 
                href={resource.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
              >
                Explore Resource
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </section>

      <!-- Community Section -->
      <section class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Community & Support</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5zM15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Discord Communities</h3>
            <p class="text-gray-600">Join developer communities to share knowledge and get help</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Open Source</h3>
            <p class="text-gray-600">Contribute to open source projects and learn from others</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Best Practices</h3>
            <p class="text-gray-600">Follow industry standards and contribute to the community knowledge</p>
          </div>
        </div>
      </section>

      <!-- Call to Action -->
      <div class="text-center mt-12">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Ready to Start Your Vibe Coding Journey?</h2>
        <p class="text-gray-600 mb-6">
          Begin with the fundamentals and work your way up to AI-assisted development mastery.
        </p>
        <div class="space-x-4">
          <a 
            href="/fundamentals" 
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors"
          >
            Start Learning
          </a>
          <a 
            href="/about" 
            class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors"
          >
            Learn More About Vibe Coding
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>